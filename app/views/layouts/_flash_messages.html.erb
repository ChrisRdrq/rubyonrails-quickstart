<div class="row">
  <% flash.each do |key, message| %>
    <div class="alert alert-dismissible <%= flash_class(key) %> fade in" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <span><%= message %></span>
    </div>
  <% end %>
</div>
