<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <h4 class="alert-heading">The form contains <%= pluralize(object.errors.count, "error")%></h4>
      <% object.errors.full_messages.each do |msg| %>
        <p class="mb-0">- <%= msg %></p>
      <% end %>
    </div>
  </div>
<% end %>
