<% provide(:title, t("login")) %>
<div class="row">
  <h3 class="text-xs-center mt-3"><%= t('login') %></h3>
  <div class="col-md-6 offset-md-3">
    <div class="card card-block">

    <%= form_for(:session, url: login_path) do |f| %>

      <div class="form-group">
        <%= f.label :email, t('email') %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password, t('password') %>
        <%= link_to t("forgot_password") , new_password_reset_path %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t("remember_me") %></span>
      <% end %>

      <%= f.submit t('login'), class: "col-xs-12 btn btn-primary" %>

    <% end %>

    <small><%= t('new_user?')%><%=link_to t('signup_now'), signup_path %></small>
    </div>
  </div>
</div>
