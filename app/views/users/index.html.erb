<% provide(:title, t("users")) %>
<div class="row">
  <h3 class="text-xs-center mt-3"><%= t('users') %></h3>
  <div class="col-md-10 offset-md-1">
    <ul class="list-group">
      <% @users.each do |user| %>
        <li class="list-group-item">
          <span><%= gravatar_for user, size: 50 %></span>
          <%= link_to "#{user.firstname} #{user.lastname}", user %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
